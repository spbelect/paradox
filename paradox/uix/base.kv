#:include constants.kv
#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<Label>:
    color: black
    valign: 'middle'
    halign: 'center'
    padding: dp(4), dp(4)
    height: height1
    font_size: font1
    size_hint_y: None
    text_size: self.width, None   # Wrap text over width

<Button>:
    color: white
    height: height1
    font_size: font1
    background_normal: ''
    size_hint_y: None

<TextInput>:
    height: height1
    font_size: font1
    unfocus_on_touch: True
    padding: dp(6), dp(6)
    write_tab: False
    #use_bubble: True
    use_handles: False  # TODO: kivy bug with handles
    #background_color: 1,0,0,1
    #foreground_color: 1,1,0,1

<ScrollView>:
    #effect_y: DampedScrollEffect(min_velocity=dp(120), friction=dp(0.06))
    effect_y: ScrollEffect(min_velocity=dp(90), friction=dp(0.05))
    scroll_timeout: 1500
    scroll_distance: 10
