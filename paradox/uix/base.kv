#:include constants.kv

<Label>:
    color: black
    valign: 'middle'
    halign: 'center'
    padding: dp(4), dp(4)
    height: height1
    font_size: font1

<Button>:
    color: white
    height: height1
    font_size: font1
    background_normal: ''

<TextInput>:
    height: height1
    font_size: font1
    unfocus_on_touch: True
    padding: dp(6), dp(6)
    write_tab: False
    #use_bubble: True
    use_handles: False  # TODO: kivy bug with handles
    #background_color: 1,0,0,1
    #foreground_color: 1,1,0,1

<ScrollView>:
    effect_y: DampedScrollEffect(min_velocity=dp(80), friction=dp(0.09))
